<h2>{{title}} <small class="text-muted">({{competition}} - {{year}})</small></h2>

<a href="/groups/{{competition}}/{{year}}" class="btn btn-secondary btn-sm mb-4">
    ← Back to Group
</a>

<div class="accordion" id="teamsAccordion">
    {{#each teams}}
    <div class="accordion-item">
        <h2 class="accordion-header" id="heading{{id}}">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{id}}">
                <strong>{{teamName}}</strong> &nbsp; <span class="text-muted">({{country}})</span>
            </button>
        </h2>
        <div id="collapse{{id}}" class="accordion-collapse collapse" data-bs-parent="#teamsAccordion">
            <div class="accordion-body">
                
                <table class="table table-sm table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Nome do Jogador</th>
                            <th>Posição</th>
                            <th style="width: 100px;">Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each players}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{position}}</td>
                            <td>
                                <form action="/groups/{{../../competition}}/{{../../year}}/add-player" method="POST">
                                    <input type="hidden" name="teamId" value="{{../id}}">
                                    <input type="hidden" name="playerId" value="{{id}}">
                                    
                                    <button type="submit" class="btn btn-success btn-sm py-0">
                                        + Add
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    {{/each}}
</div>

