<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Squad ({{group.players.length}}/11)</h4>
    {{#if (lt group.players.length 11)}} 
        <a href="/groups/{{group.competition}}/{{group.year}}/add-player" class="btn btn-sm btn-primary">Add Player</a>
    {{/if}}
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Pos</th>
            <th>Team</th>
            <th>Age</th>
            <th>Nationality</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each group.players}}
        <tr>
            <td>{{this.playerName}}</td>
            <td>{{this.position}}</td>
            <td>{{this.teamName}}</td>
            <td>{{this.age}}</td>
            <td>{{this.nationality}}</td>
            <td>
                <form action="/groups/{{../group.competition}}/{{../group.year}}/players/{{this.playerId}}/delete" method="POST">
                    <button type="submit" class="btn btn-sm btn-danger py-0">X</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>