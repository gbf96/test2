<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>My Groups</h2>
    <a href="/groups/new" class="btn btn-success">Create New Group</a>
</div>

<div class="row">
    {{#each groups}}
    <div class="col-md-4 mb-3">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{this.competition}} {{this.year}}</h6>
                <p class="card-text">{{this.description}}</p>
                <a href="/groups/{{this.competition}}/{{this.year}}" class="btn btn-primary btn-sm">View Details</a>
            </div>
        </div>
    </div>
    {{else}}
    <div class="col-12">
        <p class="text-muted">You have no groups yet.</p>
    </div>
    {{/each}}
</div>